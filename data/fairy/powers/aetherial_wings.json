{
   "name":"Aetherial Wings",
   "description":"Glistening with the hues of dawn and twilight, the Aetherial Wings grant the Fae the gift of flight. These wings, though seemingly delicate, are imbued with ancient magic, allowing the Fae to hover gracefully above the ground and glide through the skies.",
   "badges":[
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/toggle.png",
         "text":[
            "Toggleable with [",
            {
               "keybind":"key.origins.primary_active"
            },
            "] key."
         ]
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":[
            "To ascend, simply press or hold the [",
            {
               "keybind":"key.jump"
            },
            "] key; to descend, hold [",
            {
               "keybind":"key.sneak"
            },
            "]. Pressing your [",
            {
               "keybind":"key.sprint"
            },
            "] key will toggle your flight mode."
         ]
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/active.png",
         "text":[
            "While in flight mode, use the [",
            {
               "keybind":"key.jump"
            },
            "] again to boost your speed, soaring effortlessly through the air."
         ]
      }
   ],
   "type":"origins:multiple",
   "toggle":{
      "type":"origins:toggle",
      "active_by_default":false,
      "key":{
         "key":"key.origins.primary_active",
         "continuous":false
      },
      "retain_state":false
   },
   "climb_up":{
      "type":"origins:climbing",
      "allow_holding":false,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"fairy:aetherial_wings_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            }
         ]
      }
   },
   "hover":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:levitation",
            "duration":10,
            "amplifier":-1,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:levitation"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"fairy:aetherial_wings_toggle",
               "inverted":false
            },
            {
               "type":"origins:sprinting",
               "inverted":true
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "hover_down":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:apply_effect",
         "effect":{
            "effect":"minecraft:slow_falling",
            "duration":10,
            "amplifier":0,
            "is_ambient":true,
            "show_particles":false,
            "show_icon":false
         }
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:slow_falling"
      },
      "interval":5,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"fairy:aetherial_wings_toggle",
               "inverted":false
            },
            {
               "type":"origins:or",
               "conditions":[
                  {
                     "type":"origins:sprinting"
                  },
                  {
                     "type":"origins:sneaking"
                  }
               ]
            },
            {
               "type":"origins:on_block",
               "inverted":true
            }
         ]
      }
   },
   "elytra":{
      "type":"origins:elytra_flight",
      "render_elytra":true
   },
   "velocity_boost":{
      "type":"origins:active_self",
      "entity_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:add_velocity",
               "x":0.0,
               "y":0.0,
               "z":0.7,
               "space":"local",
               "client":true,
               "server":true,
               "set":false
            },
            {
               "type":"origins:play_sound",
               "sound":"minecraft:entity.allay.ambient_with_item",
               "volume":1.00,
               "pitch":1.50
            }
         ]
      },
      "cooldown":50,
      "hud_render":{
         "should_render":true,
         "sprite_location":"origins:textures/gui/resource_bar.png",
         "bar_index":4
      },
      "key":{
         "key":"key.jump",
         "continuous":true
      },
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"fairy:aetherial_wings_toggle",
               "inverted":false
            },
            {
               "type":"origins:fall_flying"
            },
            {
               "type":"origins:sprinting"
            },
            {
               "type":"origins:sneaking",
               "inverted":true
            }
         ]
      }
   },
   "active_particles":{
      "type":"origins:particle",
      "particle":"minecraft:end_rod",
      "count":1,
      "speed":0.0,
      "force":true,
      "spread":{
         "x":0.5,
         "y":0.25,
         "z":0.5
      },
      "offset_y":0.5,
      "frequency":5,
      "visible_in_first_person":false,
      "visible_while_invisible":false,
      "condition":{
         "type":"origins:power_active",
         "power":"fairy:aetherial_wings_toggle",
         "inverted":false
      }
   }
}
